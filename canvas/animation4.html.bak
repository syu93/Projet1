			stage.addChild(rond, rond1);

			var tween = createjs.Tween.get(rond, {loop:false})
			.to({rotation:360,scaleX:0.1, scaleY:0.1}, 4000)
			.call(rollEnd);			
			function rollEnd(){
				var end = true;
				
				if (end == true){
					var tween = createjs.Tween.get(rond1, {loop:false})
					.to({rotation:-360,scaleX:0.1, scaleY:0.1}, 4000)
